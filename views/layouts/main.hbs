<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Title -->
    <title>{{meta.title}} | FishPain</title>

    <!-- Description -->
    <meta name="description" content="{{meta.description}}">

    <script>if (typeof module === 'object') { window.module = module; module = undefined; }; </script>
    
    <!-- JQuery -->
    <script src="/vendor/jquery/jquery.min.js"></script>

    <!-- First-party libraries -->
    <link rel="stylesheet" href="/vendor/fishpain/app.css">
    <link rel="stylesheet" href="/vendor/fishpain/switch.css">
    <link rel="stylesheet" href="/vendor/fishpain/timeline.css">

    <!-- Font IBM Plex Sans -->
    <link rel="stylesheet" href="/vendor/font/IBM_PS">

    <!-- nprogress -->
    <link rel="stylesheet" href="/vendor/nprogress/nprogress.css">
    <script src="/vendor/nprogress/nprogress.js"></script>
    <script src="/vendor/fishpain/nprogressSetup.js"></script>

    <!-- Turbolinks -->
    <script src="/vendor/turbolinks/turbolinks.js"></script>

    <!-- UIKIT -->
    <script defer src="/vendor/uikit/navbar.js"></script>
    <link rel="stylesheet" href="/vendor/uikit/uikit.min.css">
    <script src="/vendor/uikit/uikit.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.6.22/dist/js/uikit-icons.min.js"></script>

    <!-- Font Awesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js"></script>
    <script>if (window.module) module = window.module;</script>

    <!-- Smooth Scroll -->
    <script src="/vendor/smooth-scroll-master/smooth-scroll.polyfills.min.js"></script>

</head>

<body>
    <script>NProgress.start()</script>

    {{!-- Top Navbar --}}
    <div uk-sticky="sel-target: .uk-navbar-container; cls-active: uk-navbar-sticky" id="topNav">
        <nav class="uk-navbar-container" uk-navbar style="position: relative; z-index: 980;">
            <div class="uk-navbar-center">
                <ul class="uk-navbar-nav">
                    <li class="uk-active">
                        <a id="homeNav" data-easing="{{smoothScroll.easing}}" href="#topNav">Home</a>
                    </li>
                    <li>
                        <a id="aboutNav" data-easing="{{smoothScroll.easing}}" href="#about">About</a>
                    </li>
                    <li>
                        <a id="skillsNav" data-easing="{{smoothScroll.easing}}" href="#skills">Skills & Experiences</a>
                    </li>
                    <li>
                        <a id="projectsNav" data-easing="{{smoothScroll.easing}}" href="#projects">Projects</a>
                    </li>
                </ul>

            </div>
        </nav>
    </div>

    {{{body}}}

    {{!-- Smooth Scroll --}}
    {{#if smoothScroll}}
    <script> new SmoothScroll('a[href*="#"]', {speed: 1000, speedAsDuration: true});</script>
    {{/if}}


    <script src="/vendor/fishpain/switch.js"></script>
    <script src="/vendor/fishpain/init.js"></script>
</body>
</html>